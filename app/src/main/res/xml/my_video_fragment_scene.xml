<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/mypage_tv_like"
               motion:framePosition="100"
               android:alpha="0.5" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/mypage_iv_profile"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="519dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="80dp"
            android:alpha="100"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintHorizontal_bias="0.492" />
        <Constraint
            android:id="@+id/mypage_iv_profile"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="519dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="80dp"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintHorizontal_bias="0.492" />
        <Constraint
            android:id="@+id/mypage_tv_name"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            motion:layout_constraintTop_toBottomOf="@+id/mypage_iv_profile"
            motion:layout_constraintHorizontal_bias="0.49"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="100" />
        <Constraint
            android:id="@+id/mypage_tv_explan"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/mypage_tv_name"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:alpha="100"
            motion:layout_constraintHorizontal_bias="0.492" />
        <Constraint
            motion:layout_constraintVertical_bias="0.0"
            android:layout_height="418dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="410dp"
            motion:layout_constraintTop_toBottomOf="@+id/mypage_tv_like"
            android:id="@+id/recyclerHorizon" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/mypage_tv_explan"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/mypage_tv_like" />
    </ConstraintSet>
</MotionScene>